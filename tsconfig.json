{
  "compilerOptions": {
    "target": "ES2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "checkJs": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "rootDir": "./src",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "~utils/*": ["./src/utils/*"],
      "~fastedge-build/*": ["./src/fastedge-build/*"],
      "~fastedge-init/*": ["./src/fastedge-init/*"],
      "~static-server/*": ["./src/static-server/*"],
      "~constants/*": ["./src/constants/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["./src/**/*.ts", "./types/*.d.ts"],
  "exclude": ["./node_modules", "./docs/**", "./runtime"]
}
