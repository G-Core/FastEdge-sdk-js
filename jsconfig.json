{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "noEmit": true,
    "strict": false,
    "checkJs": true,
    "baseUrl": ".",
    "paths": {
      "~utils/*": ["./src/utils/*"],
      "~fastedge-build/*": ["./src/fastedge-build/*"],
      "~fastedge-init/*": ["./src/fastedge-init/*"],
      "~static-server/*": ["./src/static-server/*"],
      "~constants/*": ["./src/constants/*"]
    }
  },
  "include": ["src/**/*.js"],
  "exclude": ["./node_modules"]
}
